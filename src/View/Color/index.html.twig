{% extends 'layout.html.twig' %}
{% block title %}Admin - Couleurs
{% endblock %}



{% block content %}
    <h2 class="display-4">Couleurs :</h2>
   
<div class="text-right my-3">
    <a href="/color/add" class="btn btn-sm btn-primary">Ajouter <i class="fas fa-plus-circle"></i></a>
</div>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Couleur</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for color in colors %}
        <tr>
            <td>{{ color.id }}</td>
            <td>{{ color.name }}</td>
            <td>
                <a href="/color/show/{{ color.id }}" class="btn btn-sm btn-success my-2"><i
                        class="fas fa-eye"></i></a>
                <a href="/color/edit/{{ color.id }}" class="btn btn-sm btn-warning my-2"><i
                        class="fas fa-edit"></i></a>
                <a href="/color/delete/{{ color.id }}" class="btn btn-sm btn-danger my-2"><i
                        class="fas fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}

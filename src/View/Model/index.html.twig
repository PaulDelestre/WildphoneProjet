{% extends 'layout.html.twig' %}
{% block title %}Admin - Modèles
{% endblock %}


{% block content %}
    <h2 class="display-4">Modèles :</h2>
   
<div class="text-right my-3">
    <a href="/model/add" class="btn btn-sm btn-primary">Ajouter <i class="fas fa-plus-circle"></i></a>
</div>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">ID Modèle</th>
            <th scope="col">Modèle</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for model in models %}
        <tr>
            <td>{{ model.id }}</td>
            <td>{{ model.name }}</td>
            <td>
                <a href="/model/show/{{ model.id }}" class="btn btn-sm btn-success my-2"><i
                        class="fas fa-eye"></i></a>
                <a href="/model/edit/{{ model.id }}" class="btn btn-sm btn-warning my-2"><i
                        class="fas fa-edit"></i></a>
                <a href="/model/delete/{{ model.id }}" class="btn btn-sm btn-danger my-2"><i
                        class="fas fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
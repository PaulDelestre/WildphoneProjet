{% extends 'layout.html.twig' %}
{% block title %}Accueil
{% endblock %}

{% block content %}

	<!--START CAROUSEL-->
	<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
		<ol class="carousel-indicators">
			<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
			{%  for i in 0..caroussels|length-2 %}
			<li data-target="#carouselExampleIndicators" data-slide-to="{{i+1}}"></li>
			{% endfor %}
		</ol>
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img class="d-block w-100" src="{{caroussels[0].url}}" alt="{{caroussels[0].name}}">
			</div>
			{% for i in 1..caroussels|length-1 %}
			<div class="carousel-item">
				<img class="d-block w-100" src="{{caroussels[i].url}}" alt="{{caroussels[i].name}}">
			</div> 
			{% endfor %}
		</div>
		<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>
	<!--END CAROUSEL-->


	<!--START WELCOME-->
	<div class="container welcome">
		<div class="row ligne">
			<div class="col column align-txt">
				<h1 class="text-commercial-gras">Bienvenue chez Wildphone,<br>le super site des bons plans !</h1>
				<div class="buton">
					<a class="btn btn-pri btn-lg" href="/Telephone/index" role="button">Voir nos produits</a>
				</div>
			</div>
			<div class="col column-2 my-4">
				<div class="row ligne my-4">
					<div class="col column-2 align-txt">
						<i class="far fa-smile item-home"></i>
						<p class="text-commercial">Des clients satisfaits !</p>
					</div>
					<div class="col column-2 align-txt">
						<i class="far fa-handshake item-home"></i>
						<p class="text-commercial">Un gage de qualité</p>

					</div>

				</div>
				<div class="row ligne my-4">
					<div class="col column-2 align-txt">
						<i class="fas fa-concierge-bell item-home"></i>
						<p class="text-commercial">Un service client au top !</p>


					</div>
					<div class="col column-2 align-txt">
						<i class="fas fa-shipping-fast item-home"></i>
						<p class="text-commercial">Une livraison aussi rapide que l'éclair</p>


					</div>
				</div>
			</div>
		</div>

	</div>
	<!--END WELCOME-->


	<!--START CARDS-->
<div class="container-card">
	<div class="container mt-5">
		<h3 class="title-promo">Nos offres du moment</h3>
		<div class="row">
		{% for i in 0..3 %}
				<div class="col-lg-3 col-md-6 col-sm-12 my-3">
        <div class="card overlay-image _b0">
            <img src="{{articles[i].images[0].url}}" class="card-img topimage _b1" alt="">
            <div class="card-body text-center">
                <a href="/telephone/show/{{ articles[i].id }}">
                <h5 class="card-title-article">{{articles[i].name}} {{articles[i].color_name}} </h5> 
				<p class="from">à partir de</p>
                <p>{{articles[i].price}} € <s class="crossed">{{articles[i].price + 100}}€</s></p>
                </a>
				<p class="waranty">Garantie 12 mois</p>
            </div>
            <div class=" hover _b2 ">
            <div class=" text _2 "><a href="/telephone/show/{{ articles[i].id }}" class="btn btn-pri">
                &nbsp; Voir plus &nbsp; <i class="fas fa-caret-right"></i>
                </a></div>
            </div>
        </div>
    </div>
			{% endfor %}
		</div>
	</div>

	<!--END CARDS-->

	<!--START CARDS-->
	<div class="container mt-5">
		<h3 class="title-promo">Les promos à ne pas manquer</h3>
		<div class="row">
		{% for i in 9..12 %}
				<div class="col-lg-3 col-md-6 col-sm-12 my-3">
        <div class="card overlay-image _b0">
            <img src="{{articles[i].images[0].url}}" class="card-img topimage _b1" alt="">
            <div class="card-body text-center">
                <a href="/telephone/show/{{ articles[i].id }}">
                <h5 class="card-title-article">{{articles[i].name}} {{articles[i].color_name}} </h5> 
				<p class="from">à partir de</p>
                <p>{{articles[i].price}} € <s class="crossed">{{articles[i].price + 10}}€</s></p>
                </a>
				<p class="waranty">Garantie 12 mois</p>
            </div>
            <div class=" hover _b2 ">
            <div class=" text _2 "><a href="/telephone/show/{{ articles[i].id }}" class="btn btn-pri">
                &nbsp; Voir plus &nbsp; <i class="fas fa-caret-right"></i>
                </a></div>
            </div>
        </div>
    </div>
			{% endfor %}
		</div>
	</div>
</div>


	<!--END CARDS-->
{% endblock %}


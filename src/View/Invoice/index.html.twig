{% extends 'layout.html.twig' %}
{% block title %}Admin - Factures
{% endblock %}

{% block content %}


<h2 class="display-4">Factures :</h2>
<div class="text-right my-3">
    <a href="/invoice/add" class="btn btn-sm btn-primary">Ajouter <i class="fas fa-plus-circle"></i></a>
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Référence facture</th>
            <th scope="col">Référence commande</th>
            <th scope="col">Article</th>
            <th scope="col">Référence article</th>
            <th scope="col">Prix</th>
            <th scope="col">Quantité</th>
            <th scope="col">Total</th>
        </tr>
    </thead>
    <tbody>
        {% for invoice in invoices %}
        <tr>
            <td>{{ invoice.id }}</td>
            <td>{{ invoice.purchase_id }}</td>
            <td>{{ invoice.article_name }}</td>
            <td>{{ invoice.article_id }}</td>
            <td>{{ article.price }}</td>
            <td>{{ invoice.quantity }}</td>
            <td>{{ invoice.total }}</td>
            <td>
                <a href="/invoice/show/{{ invoice.id }}" class="btn btn-sm btn-success my-2"><i
                    class="fas fa-eye"></i></a>
                    <a href="/invoice/edit/{{ invoice.id }}" class="btn btn-sm btn-warning my-2"><i
                        class="fas fa-edit"></i></a>
                        <a href="/invoice/delete/{{ invoice.id }}" class="btn btn-sm btn-danger my-2"><i
                        class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {% endfor %}
                
    </tbody>
</table>

{% endblock %}
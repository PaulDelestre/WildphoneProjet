{% extends 'layout.html.twig' %}
{% block stylesheet %}<link rel="stylesheet" href="/assets/css/edit.css">{% endblock %}


{% block content %}	
	<div class="container volume">
		<a href="/image/index" class="pull-right exit"><i class="fas fa-times-circle"></i></a><br>
		<h1>Editer le image</h1>
		<div class="form  ">
			<form method="post">
                <div class="form-group center-form">
                    <label for="url">Url :</label>
                    <input type="text" name="url" class="form-control w-50 center-form" id="url" aria-describedby="emailHelp" value="{{ image.url }}" required="require">
                </div>
                <div class="form-group center-form">
                    <label for="article_id">Article ID :</label>
                    <select name="article_id" id="article-select">
						{% for article in articles %}
							<option value="{{article.id}}">{{article.name}}</option>
						{% endfor %}
					</select>
                </div>
				<button type="submit" class="btn btn-warning pull-right marge-button"><i class="fas fa-edit">Ã‰diter</i></button>
			</form>
			<a href="/image/show/{{ image.id }}"><button type="button" class="btn btn-danger marge-button"><i class="fas fa-backspace"> Retour</i></button></a>		
		</div>
	</div>
{% endblock %}


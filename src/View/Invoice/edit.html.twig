{% extends 'layout.html.twig' %}
{% block stylesheet %}<link rel="stylesheet" href="/assets/css/edit.css">{% endblock %}

{% block content %}
<div class="container volume">
    <a href="/invoice/index" class="pull-right exit"><i class="fas fa-times-circle"></i></a><br>
    <h1>Editer la facture</h1>
    <form method="post">
        <div class="form-group center-form">
         <label for="article_id">Article ID :</label>
         <input type="number" name="article_id" class="form-control w-50 center-form" id="exampleInputEmail1" aria-describedby="emailHelp"
            value="{{ invoice.article_id }}" required="require">
        </div>
        <div class="form-group center-form">
         <label for="purchase_id">Commande ID :</label>
         <input type="number" name="purchase_id" class="form-control w-50 center-form" id="exampleInputEmail1" aria-describedby="emailHelp"
            value="{{ invoice.purchase_id }}" required="require">
        </div>
        <div class="form-group center-form">
         <label for="quantity">Quantité :</label>
         <input type="number" name="quantity" class="form-control w-50 center-form" id="exampleInputEmail1" aria-describedby="emailHelp"
            value="{{ invoice.quantity }}" required="require">
        </div>
        <div class="form-group center-form">
            <label for="total">Total :</label>
            <input type="number" name="total" class="form-control w-50 center-form" id="exampleInputEmail1" aria-describedby="emailHelp"
            value="{{ invoice.total }}" required="require">
        </div>
     <button type="submit" class="btn btn-warning pull-right "><i class="fas fa-edit">Éditer</i></button>
    </form>
    <a href="/invoice/show/{{ invoice.id }}"><button type="button" class="btn btn-danger marge-button"><i class="fas fa-backspace"> Retour</i></button></a>
</div>

{% endblock %}


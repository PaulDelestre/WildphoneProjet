{% extends 'layout.html.twig' %}



{% block content %}
    <h2 class="display-4">Objets :</h2>
   
<div class="text-right my-3">
    <a href="/item/add" class="btn btn-sm btn-primary">Ajouter <i class="fas fa-plus-circle"></i></a>
</div>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Objet</th>
        </tr>
    </thead>
    <tbody>
        {% for item in items %}
        <tr>
            <td>{{ item.id }}</td>
            <td>{{ item.name }}</td>
            <td>
                <a href="/item/show/{{ item.id }}" class="btn btn-sm btn-success my-2"><i
                        class="fas fa-eye"></i></a>
                <a href="/item/edit/{{ item.id }}" class="btn btn-sm btn-warning my-2"><i
                        class="fas fa-edit"></i></a>
                <a href="/item/delete/{{ item.id }}" class="btn btn-sm btn-danger my-2"><i
                        class="fas fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
{% extends 'layout.html.twig' %}

{% block title %}Admin - Utilisateurs - Modifier
{% endblock %}

{% block content %}
	<div class="container container-admin">
		<h1>Editer l'utilisateur</h1>
		<form method="post">
			<div class="form-group">
				<label for="name">Pr√©nom</label>
				<input type="text" name="firstname" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{ user.firstname }}" required="require">
			</div>
			<div class="form-group">
				<label for="price">Nom</label>
				<input type="text" name="lastname" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{ user.lastname }}" required="require">
			</div>
			<div class="form-group">
				<label for="description">Email</label>
				<textarea type="text" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required="require">{{ user.email }}</textarea>
			</div>
			<div class="form-group">
				<label for="quantity">Mot de passe</label>
				<input type="text" name="password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="{{ user.password }}" required="require">
			</div>
			<div class="form-group">
				<label for="color_id">Addresse</label>
				<input type="text" name="address" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{ user.adrress }}" required="require">
			</div>
			<div class="form-group">
				<label for="brand_id">ID Role</label>
				<input type="text" name="role_id" class="form-control col-2" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{ user.role_id }}" required="require">
			</div>

			<a href="/user/show/{{ user.id }}" class="btn btn-primary">Retour</a>
			<button type="submit" class="btn btn-success">Modifier</button>
		</form>
	</div>
{% endblock %}


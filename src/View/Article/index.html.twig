{% extends 'layout.html.twig' %}
{% block title %}Admin - Articles
{% endblock %}
{% block content %}
    <h2 class="display-4">Articles :</h2>
<div class="text-right my-3">
    <a href="/article/add" class="btn btn-sm btn-primary">Ajouter <i class="fas fa-plus-circle"></i></a>
</div>
<div class="container">
    
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Prix</th>
            <th scope="col">Description</th>
            <th scope="col">Quantité</th>
            <th scope="col">image</th>
            <th scope="col">couleur id</th>
            <th scope="col">marque id</th>
            <th scope="col">modèle id</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {% for article in articles %}
        <tr>
            <td>{{ article.id }}</td>
            <td>{{ article.name }}</td>
            <td>{{ article.price }}</td>
            <td><img class="img-fluid w-100" src='{{ article.images[0].url }}'></td>
            <td>{{ article.description }}</td>
            <td>{{ article.quantity }}</td>
            <td>{{ article.color_name }}</td>
            <td>{{ article.brand_name }}</td>
            <td>{{ article.model_name }}</td>
            <td>
                <a href="/article/show/{{ article.id }}" class="btn btn-sm btn-success my-2"><i
                        class="fas fa-eye"></i></a>
                <a href="/article/edit/{{ article.id }}" class="btn btn-sm btn-warning my-2"><i
                        class="fas fa-edit"></i></a>
                <a href="/article/delete/{{ article.id }}" class="btn btn-sm btn-danger my-2"><i
                        class="fas fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}





{% extends 'layout.html.twig' %}
{% block stylesheet %}<link rel="stylesheet" href="/assets/css/edit.css">{% endblock %}


{% block content %}
<div class="container">
    <div class="col-md-12">
        <div class="card m-auto ">
            <div class="card-body ">
                <a href="/purchase/index" class="pull-right exit"><i class="fas fa-times-circle"></i></a><br>
                <p class="card-text">#{{purchase.id}}</p> 
                <p class="card-title text-center comment-show">ID utilisateur : {{ purchase.user_id}}</p> 
                <p class="card-title text-center comment-show">Montant de l'achat : {{ purchase.total}}</p> 
                <p class="card-title text-center comment-show">Date d'achat : {{ purchase.created_at}}</p> 
            </div>   
        </div>
    </div>
</div>
{% endblock %}



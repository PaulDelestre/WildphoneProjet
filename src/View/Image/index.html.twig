{% extends 'layout.html.twig' %}
{% block title %}Admin - Images
{% endblock %}


{% block content %}
	<h2 class="display-4">Images :</h2>
	<div class="text-right my-3">
		<a href="/image/add" class="btn btn-sm btn-primary">Ajouter
			<i class="fas fa-plus-circle"></i>
		</a>
	</div>
	<table class="table table-dark">
		<thead>
			<tr>
				<th scope="col">ID</th>
				<th scope="col">Image</th>
				<th scope="col">ID Article</th>
				<th scope="col">Mod√®le</th>
				<th scope="col">Couleur</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for image in images %}
				<tr>
					<td>{{ image.id }}</td>
					<td>
						<img src="{{ image.url }}" class="img-fluid" width="150px">
					</td>
					<td>{{ image.article_id }}</td>
					<td>{{ image.article_name }}</td>
					<td>{{ image.color_article }}</td>
					<td>
						<a href="/image/show/{{ image.id }}" class="btn btn-sm btn-success my-2">
							<i class="fas fa-eye"></i>
						</a>
						<a href="/image/edit/{{ image.id }}" class="btn btn-sm btn-warning my-2">
							<i class="fas fa-edit"></i>
						</a>
						<a href="/image/delete/{{ image.id }}" class="btn btn-sm btn-danger my-2">
							<i class="fas fa-trash"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}


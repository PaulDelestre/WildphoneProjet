{% extends 'layout.html.twig' %}
{% block stylesheet %}<link rel="stylesheet" href="/assets/css/edit.css">{% endblock %}

{% block content %}
<div class="container container-show">
	<a href="/article/index" class="pull-right exit"><i class="fas fa-times-circle"></i></a><br>
	<h1>Editer l'article{{ item.title }}</h1>
	<form method="post">

		{% for image in article.images %}
		<img src="{{ image.url }}" alt="imageurl">
		<a href="/image/delete/{{image.id}}" class="btn btn-danger fas fa-trash"></a>
		{% endfor %}
		<div class="form-group">
			<label for="image">Image</label>
			<input type="text" name="image" class="form-control" id="image" aria-describedby="emailHelp" value="">
		</div>

		<div class="form-group">
			<label for="name">Nom</label>
			<input type="text" name="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{ article.name }}" required="require">
		</div>
		<div class="form-group">
			<label for="price">Prix</label>
			<input type="number" name="price" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{ article.price }}" required="require">
		</div>
		<div class="form-group">
			<label for="description">Description</label>
			<textarea type="text" name="description" class="form-control" id="exampleInputEmail1" rows="8" cols="33" required="require">{{ article.description }}</textarea>
		</div>
		<div class="form-group">
			<label for="quantity">Quantité</label>
			<input type="number" name="quantity" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{ article.quantity }}" required="require">
		</div>
		<div class="form-group">
			<label for="color_id">Couleur</label>
			<select name="color_id" id="color-select">
				{% for color in colors %}
				<option value="{{color.id}}">{{color.name}}</option>
				{% endfor %}
			</select>
		</div>
		<div class="form-group">
			<label for="brand_id">Marque</label>
			<select name="brand_id" id="brand-select">
				{% for brand in brands %}
				<option value="{{brand.id}}">{{brand.name}}</option>
				{% endfor %}
			</select>
		</div>
		<div class="form-group">
			<label for="model_id">Modèle</label>
			<select name="model_id" id="model-select">
				{% for model in models %}
				<option value="{{model.id}}">{{model.name}}</option>
				{% endfor %}
			</select>
		</div>
		<a href="/article/show/{{ article.id }}"><button type="button" class="btn btn-danger marge-button"><i class="fas fa-backspace"> Retour</i></button></a>
		<button type="submit" class="btn btn-warning pull-right marge-button"><i class="fas fa-edit"><a href="/article/show/{{ article.id }}">Editer</a></i></button>
		
	</form>
	
</div>
	
{% endblock %}

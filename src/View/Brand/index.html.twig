{% extends 'layout.html.twig' %}
{% block title %}Admin - Marques
{% endblock %}



{% block content %}

<h2 class="display-4">Marques :</h2>   
<div class="text-right my-3">
    <a href="/brand/add" class="btn btn-sm btn-primary">Ajouter <i class="fas fa-plus-circle"></i></a>
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Marque</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for brand in brands %}
        <tr>
            <td>{{ brand.id }}</td>
            <td>{{ brand.name }}</td>
            <td>
                <a href="/brand/show/{{ brand.id }}" class="btn btn-sm btn-success my-2"><i
                        class="fas fa-eye"></i></a>
                <a href="/brand/edit/{{ brand.id }}" class="btn btn-sm btn-warning my-2"><i
                        class="fas fa-edit"></i></a>
                <a href="/brand/delete/{{ brand.id }}" class="btn btn-sm btn-danger my-2"><i
                        class="fas fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}

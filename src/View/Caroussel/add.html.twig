{% extends 'layout.html.twig' %}
{% block title %}Admin - Images - Ajouter
{% endblock %}
{% block stylesheet %}<link rel="stylesheet" href="/assets/css/edit.css">{% endblock %}

{% block content %}
	<div class="container container-admin">
		<a href="/caroussel/index" class="pull-right exit"><i class="fas fa-times-circle"></i></a><br>
		<h1>Ajouter une nouvelle image au Caroussel</h1>
		<form method="post">
			<div class="form-group">
				<label for="name">Nom de l'image</label>
				<input type="text" name="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required="require">
			</div>
			<div class="form-group">
				<label for="url">URL</label>
				<input type="text" name="url" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required="require">
			</div>
			<a href="/image/index"><button type="button" class="btn btn-danger marge-button"><i class="fas fa-backspace"> Retour</i></button></a>
			<button type="submit" class="btn btn-warning pull-right marge-button"><i class="fas fa-plus-circle"></i> Ajouter</i></button>
		</form>
	</div>
{% endblock %}

